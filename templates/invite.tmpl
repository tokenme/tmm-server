<!DOCTYPE html>
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta name="renderer" content="webkit">
<link rel="stylesheet" href="https://static.tianxi100.com/bluma.min.css" />
<title>UCOIN邀请好友</title>
</head>
<style>
html, body {
    width: 100%;
    height: 100%;
}
body {
    background-image: url('https://ucoin.tianxi100.com/tmm/invite/page-bg.png');
    background-repeat:no-repeat;
    background-size:100% 100%;
    -moz-background-size:100% 100%;
}
header {
    text-align: center;
}
.redpacket {
    background-image: url('https://ucoin.tianxi100.com/tmm/invite/redpacket.png');
    background-repeat:no-repeat;
    background-size:100% 100%;
    -moz-background-size:100% 100%;
    height: 0;
    padding-bottom: 100%;
    margin-left: 1.5em;
    margin-right: 1.5em;
    text-align: center;
}
.title {
    width: 100%;
    margin-bottom: 30px;
}
.txt {
    color: red;
    font-size: 1.5em;
    font-weight: bold;
    margin-top: 1.6em;
}
.content h2 {
    color: red;
}
.action {
    margin-top: 6.5em;
}
.action .txt {
    color: white;
    font-size: 0.8em;
    line-height: 4em;
}
{{ if .submitted }}
.share-dialog-container{
    position:fixed;
    top: 0;
    display: none;
}
.share-dialog-container.show{
    display: block;
}

.share-dialog{
    color: #fff;
    z-index: 10000;
    position: fixed;
    width: 100%;
}
.share-dialog .text{
    text-align: center;
}
.share-dia-bg{
    position: fixed;
    background-color: rgba(100,100,100,0.5);
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: -1;
}
.img-icon {
    text-align: right;
}
{{ end  }}
</style>
<body>
    <section class="section">
        <div class="container is-fluid">
            <div class="content">
                <div class="columns is-mobile is-centered">
                    <div class="column"><img src="https://ucoin.tianxi100.com/tmm/invite/page-title.png" class="title"></div>
                </div>
                <div class="columns is-mobile is-centered">
                    <div class="column redpacket">
                        <div class="txt">
                            恭喜获得
                            <h2>88</h2>
                        </div>
                        <div class="action">
                        {{ if .submitted }}
                            <div class="txt">红包将在24小时后过期</div>
                            <a id="downBtn" href="{{ .link }}" class="button is-warning">下载APP 立即领取</a>
                        {{ else }}
                            <form method="POST" action="?submitted=true">
                                <div class="field is-grouped is-grouped-centered">
                                    <div class="control">
                                        <input class="input" type="tel" placeholder="输入手机号领红包" name="tel">
                                    </div>
                                </div>
                                <div class="field is-grouped is-grouped-centered">
                                    <div class="control">
                                        <button type="submit" class="button is-warning">立即领取</button>
                                    </div>
                                </div>
                            </form>
                        {{ end }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {{ if .submitted }}
    <div class="share-dialog-container">
        <div class="share-dialog">
            <div class="img-icon">
              <img src="data:image/png;base64,"
                alt="">
            </div>
            <div class="text">
              <div>请在浏览器打开</div>
            </div>
          </div>
        <div class="share-dia-bg" ></div>
    </div>
<script type="text/javascript">
var ua = window.navigator.userAgent.toLowerCase();;

function isAndroid(){
    var match = ua.match(/android/i);
    if (match && match[0] == "android") {
      return true;
    } else {
      return false;
    }
}

function isWeixin(){
    var match = ua.match(/micromessenger/i);
    if (match && match[0] == "micromessenger") {
      return true;
    } else {
      return false;
    }
}

if(isAndroid() && isWeixin()){
    var downBtn = document.getElementById('downBtn');
    downBtn.addEventListener('click', function (e) {
        e.preventDefault();
        var modal = document.querySelector('.share-dialog-container');
        var isshow = modal.classList.contains('show');
        if(!isshow){
            modal.classList.add('show');
        } else{
            modal.classList.remove('show');
        }
        return false;
    })
}
</script>
{{ end }}
</body>
</html>